{% extends "AlazjjSimpleBootstrapBundle::base.html.twig" %}
{% block body %}
    <div class="container">
        <h1>Modal tools</h1>

        <h2>Form</h2>

        <div class="row">

            <div class="span12">
                {% include "AlazjjSimpleBootstrapBundle::flash.html.twig" %}
            </div>
            <div class="span6">
                {% render controller("AlazjjDemoSimpleBootstrapBundle:Form:newForm") with {'id' : 'toto'} %}
            </div>
            <div class="span6">
                {% render controller("AlazjjDemoSimpleBootstrapBundle:Form:newForm") with {'id' : 'tata'} %}
            </div>
        </div>
    </div>

    <div class="modal hide" id="otherMarkupContainer"></div>
    <script>
        /**
         * Modal
         */

        $(function () {
            $('[data-modal="simple"]').simpleModal();
            $('[data-modal="confirm"]').confirmModal();
            $('[data-modal="alert"]').alertModal();


            /*
             * Manage edition field one by one.
             */
            $('[data-form="row"]').formEditField();


            /*
             * Put a data-form-edit="form" on element to enable edition on all form fields
             */
            $('[data-form-edit="form"]').on("click", function () {
                $('[data-form="row"]').formEditField({
                    allFields: true
                });
            });
        });
    </script>


{% endblock body %}
