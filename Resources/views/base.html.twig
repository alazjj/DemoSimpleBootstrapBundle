{% extends 'AlazjjSimpleBootstrapBundle::base.html.twig' %}

{% block body %}
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <a class="brand" href="#">DemoSimpleBootstrapBundle</a>
                <div class="nav-collapse collapse">
                    <ul class="nav">
                        <li><a href="">Home</a></li>
                        <li><a href="">Modals</a></li>
                        <li><a href="">Forms</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    {% block header %}
        <header id="overview" class="jumbotron subhead">
            <div class="container">
                <h1>DemoSimpleBootstrapBundle</h1>
                <p class="lead">Overview of the project, its contents, and how to get started with a simple template.</p>
            </div>
        </header>
    {% endblock header %}

    {% block main %}
        <div class="container">
            <div class="row">
                <div class="span3 bs-docs-sidebar">
                    <ul class="nav nav-list bs-docs-sidenav affix-top">
                        {% block sidebar %}
                        {% endblock sidebar %}
                    </ul>
                </div>
            </div>
        </div>

        <div class="span9">
            {% block content %}
            {% endblock content %}
        </div>
    {% endblock main %}

    {% block footer %}
        <footer class="footer">
            <div class="container">
                <p>footer blablabla</p>
            </div>
        </footer>
    {% endblock footer %}
{% endblock body %}